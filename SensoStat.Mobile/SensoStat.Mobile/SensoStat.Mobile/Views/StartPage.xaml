<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="SensoStat.Mobile.Views.StartPage">
    <StackLayout
        Padding="20, 50"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="FillAndExpand"
        BackgroundColor="{StaticResource PaleYellow}">
        <Label
            Margin="20, 20"
            HorizontalOptions="Center"
            HorizontalTextAlignment="Center"
            Text="Bienvenue à notre séance de tests"
            FontSize="Title">
        </Label>

        <ActivityIndicator
            IsRunning="True"
            IsVisible="{Binding IsBusy}">
        </ActivityIndicator>

        <StackLayout VerticalOptions="EndAndExpand">
            <Button
                Command="{Binding StartSurveyCommand}"
                BackgroundColor="{StaticResource Orange}"
                Text="Commencer la séance"
                TextColor="{StaticResource White}"
                CornerRadius="15"
                FontAttributes="Bold"
                Padding="15">
            </Button>
            <Label
                Text="Ou dites 'Commencer'"
                HorizontalTextAlignment="Center">
            </Label>
        </StackLayout>

    </StackLayout>
</ContentPage>
